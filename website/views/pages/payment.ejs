        <% payments.forEach((payment)=> { %>
            <div class="form-check text-left m-2">
                <input class="form-check-input" type="radio" name="paymentId" value="<%= payment.id %>">
                    <%= payment.name %>
            </div>
        <% }) %>
        <div>
            <button type="submit" class="btn btn-primary mt-3 m-1 w-100">Pay</a>
        </div>
        <div>
